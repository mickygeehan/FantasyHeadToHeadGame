<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main_hub"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#097DC9"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.michael.fantasyheadtoheadgame.MainHub"
    tools:showIn="@layout/activity_main_hub">


    <Button
        android:id="@+id/angry_btn2"
        android:text="Contests"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:onClick="gotoUserMatchesScreen"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/angry_btn"
        android:layout_alignStart="@+id/angry_btn" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/fantasy_showdon"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
    android:id="@+id/angry_btn"
    android:text="Team"
    android:textColor="#FFFFFF"
    android:textSize="30sp"
    android:onClick="gotoUserTeamScreen"
    android:layout_width="240dp"
    android:layout_height="50dp"
    android:background="@drawable/buttonshape"
    android:shadowColor="#A8A8A8"
    android:shadowDx="0"
    android:shadowDy="0"
    android:shadowRadius="5"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
