<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_user_matches"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#097DC9"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.michael.fantasyheadtoheadgame.ActivityScreens.UserContests"
    tools:showIn="@layout/activity_user_matches">


    <Button
        android:id="@+id/xmlViewInvites"
        android:text="View Invites"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:onClick="viewInvites"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/xmlFindContest" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:id="@+id/xmlUMlistview"
        android:layout_above="@+id/xmlFindContest"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Contests"
        android:textSize="25sp"
        android:visibility="invisible"
        android:layout_marginTop="17dp"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Contests"
        android:textSize="32sp"
        android:elegantTextHeight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_above="@+id/xmlUMlistview"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />

    <ImageView
        android:layout_width="100sp"
        android:layout_height="100sp"
        app:srcCompat="@drawable/h2h_opt"
        android:id="@+id/imageView8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/xmlFindContest"
        android:text="Find contest"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20sp"
        android:textSize="30sp"
        android:onClick="showInvitePopup"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/xmlViewInvites"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
